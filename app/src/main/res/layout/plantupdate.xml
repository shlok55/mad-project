<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="Update Data..."
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/upimage"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#77EC79"
        android:text="update product"
        android:textColor="#025A0F"
        android:textSize="12sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/uploadupimg"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:layout_below="@id/upquantity"
        android:layout_marginStart="15dp"

        android:layout_marginEnd="10dp"
        android:backgroundTint="#77EC79"
        android:text="Change Image"
        android:textColor="#025A0F"
        app:cornerRadius="10dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="439dp" />

    <TextView
        android:id="@+id/nameup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView7"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/upname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Product Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/aboutup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/upname"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Product Description"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/upabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Product Description"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/priceup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/upabout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Product Price"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/upprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Product Price"
        android:inputType="number"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="256dp" />

    <TextView
        android:id="@+id/quantup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/upprice"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Product Quantity"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/upquantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Product Quantity"
        android:inputType="number"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="324dp" />

    <ImageView
        android:id="@+id/upimage"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_below="@id/upquantity"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_toRightOf="@id/uploadupimg" />

</RelativeLayout>