<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_login_reg"
    tools:context=".SellerLoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="serif"
        android:text="Welcome\nBack"
        android:textColor="#025A0F"
        android:textSize="36dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="118dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView2"
        android:gravity="center"
        android:layout_marginRight="35dp"
        >
    <EditText
        android:id="@+id/LoginPasswd"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Password"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/LoginEmail"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="368dp" />

    <TextView
        android:id="@+id/regtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/googlesignin"
        android:layout_toRightOf="@id/textView4"
        android:textColor="@color/green"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="611dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="176dp"
            android:layout_height="30dp"
            android:text="Want to become a family?"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/googlesignin"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="610dp" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="262dp"
            android:layout_height="48dp"
            android:layout_below="@id/forgotpass"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/green"
            android:text="Login"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="459dp" />


        <TextView
            android:id="@+id/googlesignin"
            android:layout_width="246dp"
            android:layout_height="30dp"
            android:layout_below="@id/loginbtn"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/back"
            android:drawableLeft="@drawable/google"
            android:drawablePadding="2dp"
            android:padding="3dp"
            android:text="Sign in with Google"
            android:textColor="@color/green"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="543dp" />

        <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/LoginPasswd"
        android:textColor="#025A0F"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="424dp" />

        <EditText
            android:id="@+id/LoginEmail"
            android:layout_width="259dp"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="75dp"
            android:ems="10"
            android:hint="Enter E-mail"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="313dp" />

    </RelativeLayout>

</RelativeLayout>